@using QuizLibrary 
@model List<SubjectView>

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Invoices</h3>
        </div>
        <div class="table-responsive">
            <table class="table card-table table-vcenter text-nowrap">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SubjectView sv in Model)
                    {
                        <tr>
                            <td>@sv.subname</td>
                            <td>@sv.subdesc</td>
                            <td>@sv.sname</td>
                            <td>
                                <button type="button" class="btn btn-primary btn-sm">Take Quiz</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>